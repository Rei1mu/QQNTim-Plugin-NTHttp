{
    "$schema": "https://docs.rome.tools/schemas/12.1.3/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "files": {
        "ignore": [".pnp.cjs", ".pnp.loader.mjs", ".yarn/*", "dist/*"]
    },
    "formatter": {
        "indentSize": 4,
        "indentStyle": "space",
        "lineWidth": 300
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "suspicious": { "noExplicitAny": "off", "noDoubleEquals": "off" },
            "style": { "noParameterAssign": "off", "noNonNullAssertion": "off" },
            "a11y": { "all": false }
        }
    }
}
